    <script>
        const bloodTypeData = {
            'O': {
                skin: ["Plums", "Figs", "Berries (Blueberries, Cherries)", "Kale", "Spinach", "Broccoli"],
                organ_benefits: { liver: ["Artichoke", "Dandelion Greens", "Garlic", "Beets"], heart: ["Kale", "Spinach", "Onions", "Garlic"], kidney: ["Kelp", "Parsley", "Berries (esp. Cranberries - unsweetened)"], digestion: ["Sweet Potatoes", "Pumpkin", "Parsnips", "Ginger"]},
                daily_rec: { item: "Kale Smoothie", tip: "Blend kale with blueberries and a splash of water for a nutrient-dense start." },
                avoid: ["Oranges", "Strawberries", "Melon (Cantaloupe, Honeydew)", "Corn", "Potatoes", "Cabbage", "Cauliflower", "Avocado", "Mushrooms (Shiitake)"],
                scientific_snippet: "Theory suggests Type O benefits from lean protein and specific vegetables/fruits, potentially linked to ancestral hunter-gatherer diets. May need to limit grains and dairy."
            },
            'A': {
                skin: ["Apricots", "Berries (Blueberries, Blackberries)", "Carrots", "Spinach", "Broccoli"],
                organ_benefits: { liver: ["Artichoke", "Lemon", "Garlic", "Broccoli"], heart: ["Garlic", "Onions", "Spinach", "Broccoli", "Carrots"], kidney: ["Cranberries (unsweetened)", "Onions", "Blueberries"], digestion: ["Pineapple", "Ginger", "Carrots", "Okra", "Spinach"]},
                daily_rec: { item: "Broccoli & Carrot Stir-fry", tip: "Lightly steam or stir-fry with garlic and ginger. Serve with brown rice or tofu." },
                avoid: ["Tomatoes", "Potatoes", "Peppers", "Cabbage (Red & White)", "Bananas", "Oranges", "Mangoes"],
                scientific_snippet: "Theory posits Type A individuals may thrive on vegetarian-based diets, aligning with early agrarian societies. Emphasis on fruits, vegetables, legumes, and whole grains."
            },
            'B': {
                 skin: ["Pineapple", "Papaya", "Grapes", "Leafy Greens (Kale, Collards - avoid spinach)", "Sweet Potatoes"],
                organ_benefits: { liver: ["Beets", "Carrots", "Leafy Greens", "Lemon"], heart: ["Sweet Potatoes", "Peppers (Green, Red, Yellow)", "Kale", "Broccoli"], kidney: ["Cranberries (unsweetened)", "Parsley", "Cucumber", "Grapes"], digestion: ["Papaya", "Pineapple", "Ginger", "Licorice Root (as tea)", "Yams"]},
                daily_rec: { item: "Roasted Sweet Potatoes", tip: "Cube sweet potatoes, toss with olive oil and rosemary, and roast until tender." },
                avoid: ["Tomatoes", "Corn", "Avocado", "Artichoke", "Pumpkin", "Radishes", "Olives", "Pomegranate", "Coconut"],
                scientific_snippet: "Theory suggests Type B has a tolerant digestive system, potentially linked to nomadic groups. Can often handle dairy and a wider variety of foods, but should avoid specific items like chicken and corn."
            },
            'AB': {
                skin: ["Grapes", "Plums", "Berries (Cherries, Cranberries)", "Leafy Greens (Kale, Spinach)", "Celery", "Cucumber"],
                organ_benefits: { liver: ["Lemon", "Beets", "Broccoli", "Garlic"], heart: ["Garlic", "Onions", "Celery", "Hawthorn Berries (as supplement/tea often)", "Kale"], kidney: ["Cranberries (unsweetened)", "Cucumber", "Celery", "Watermelon"], digestion: ["Pineapple", "Papaya", "Kefir/Yogurt (if dairy tolerated)", "Ginger", "Grapefruit"]},
                daily_rec: { item: "Cucumber & Celery Juice", tip: "Juice fresh cucumber and celery stalks for a hydrating and kidney-supportive drink." },
                avoid: ["Oranges", "Bananas", "Corn", "Artichoke", "Peppers (strong varieties)", "Radishes", "Lima Beans"],
                scientific_snippet: "Theory views Type AB as a modern blend of A and B. Diet recommendations often combine aspects of both, emphasizing vegetables, tofu, seafood, and cultured dairy."
            }
        };

        const commonAilmentSupportData = [
            { ailment: "Immune System Support (e.g., during cold/flu season)", foods: [{ name: "Citrus Fruits (Oranges, Lemons, Grapefruit)", note: "Rich in Vitamin C, an antioxidant that supports immune function." }, { name: "Garlic", note: "Contains allicin, known for immune-boosting and antimicrobial properties." }, { name: "Ginger", note: "Anti-inflammatory, can soothe sore throats and support immune response." }, { name: "Berries (Blueberries, Strawberries, Raspberries)", note: "Packed with antioxidants that help protect cells." }, { name: "Spinach", note: "Rich in Vitamin C, antioxidants, and beta carotene, which may increase infection-fighting ability of our immune systems." }]},
            { ailment: "Mild Digestive Discomfort (e.g., bloating, occasional indigestion)", foods: [{ name: "Ginger", note: "Traditionally used to soothe an upset stomach and aid digestion." }, { name: "Peppermint (often as tea)", note: "May help relax digestive muscles and relieve bloating." }, { name: "Papaya", note: "Contains papain, an enzyme that can aid in protein digestion." }, { name: "Fennel", note: "Known to help reduce gas and bloating; can be eaten raw or as seeds." }]},
            { ailment: "Support for Regular Bowel Movements (e.g., occasional constipation)", foods: [{ name: "Prunes/Plums", note: "High in fiber and contain sorbitol, a natural substance that can help with bowel movements." }, { name: "Apples (with skin)", note: "Good source of pectin, a type of soluble fiber that aids digestion." }, { name: "Pears (with skin)", note: "Provide fiber and natural sugars that can help with regularity." }, { name: "Kiwifruit", note: "High in fiber and actinidin, an enzyme that may improve bowel function." }]},
            { ailment: "Support Against Minor Inflammation", foods: [{ name: "Turmeric (often combined with black pepper for better absorption)", note: "Contains curcumin, a compound with potent anti-inflammatory properties." }, { name: "Ginger", note: "Well-known for its anti-inflammatory effects." }, { name: "Berries", note: "Antioxidants like anthocyanins have anti-inflammatory effects." }, { name: "Pineapple", note: "Contains bromelain, an enzyme with anti-inflammatory properties." }, { name: "Leafy Greens (Spinach, Kale)", note: "Rich in antioxidants and compounds that may help counter inflammation."}]}
        ];

        const selectElement = document.getElementById('bloodGroupSelect');
        const outputDiv = document.getElementById('recommendationsOutput');
        const selectedBloodTypeSpan = document.getElementById('selectedBloodType');
        const selectedBloodTypeHeader = document.getElementById('selectedBloodTypeHeader');
        const skinList = document.getElementById('skinHealthList');
        const liverList = document.getElementById('liverList');
        const heartList = document.getElementById('heartList');
        const kidneyList = document.getElementById('kidneyList');
        const digestiveList = document.getElementById('digestiveList');
        const dailyPickSpan = document.getElementById('dailyPick');
        const dailyTipSpan = document.getElementById('dailyTip');
        const avoidListUL = document.getElementById('avoidList'); 
        const scientificSnippetP = document.getElementById('scientificSnippet');
        const commonAilmentSupportDiv = document.getElementById('commonAilmentSupport');

        const starRatingContainer = document.getElementById('starRatingContainer');
        const stars = Array.from(starRatingContainer.children).reverse(); // Reverse for 1-5 indexing
        const ratingMessage = document.getElementById('ratingMessage');
        let currentRating = 0;

        selectElement.addEventListener('change', displayRecommendations);

        function displayRecommendations() {
            const selectedGroup = selectElement.value;
            if (!selectedGroup) {
                outputDiv.style.display = 'none'; 
                return;
            }
            const data = bloodTypeData[selectedGroup];
            if (!data) {
                console.error("Data not found for blood group:", selectedGroup);
                outputDiv.style.display = 'none';
                return;
            }
            selectedBloodTypeSpan.textContent = selectedGroup;
            selectedBloodTypeHeader.style.display = 'block';
            populateList(skinList, data.skin);
            populateList(liverList, data.organ_benefits.liver);
            populateList(heartList, data.organ_benefits.heart);
            populateList(kidneyList, data.organ_benefits.kidney);
            populateList(digestiveList, data.organ_benefits.digestion);
            populateList(avoidListUL, data.avoid, true); 
            dailyPickSpan.textContent = data.daily_rec.item;
            dailyTipSpan.textContent = data.daily_rec.tip;
            scientificSnippetP.textContent = data.scientific_snippet;
            populateAilmentSupportList();
            outputDiv.style.display = 'block';
            currentRating = 0;
            highlightStars(0);
            ratingMessage.textContent = "";
        }

        function populateList(ulElement, items, isAvoidList = false) {
            ulElement.innerHTML = ''; 
             if (!items || items.length === 0) {
                const li = document.createElement('li');
                li.textContent = 'No specific recommendations listed for this category.';
                li.style.paddingLeft = '0'; 
                li.style.background = 'none';
                ulElement.appendChild(li);
                return;
            }
            items.forEach(item => {
                const li = document.createElement('li');
                li.textContent = item;
                ulElement.appendChild(li);
            });
        }

        function populateAilmentSupportList() {
            commonAilmentSupportDiv.innerHTML = '';
            commonAilmentSupportData.forEach(ailmentCategory => {
                const categoryTitle = document.createElement('h4');
                categoryTitle.textContent = ailmentCategory.ailment;
                commonAilmentSupportDiv.appendChild(categoryTitle);
                const ul = document.createElement('ul');
                ailmentCategory.foods.forEach(foodItem => {
                    const li = document.createElement('li');
                    const foodNameSpan = document.createElement('span');
                    foodNameSpan.className = 'food-name';
                    foodNameSpan.textContent = foodItem.name + ": ";
                    li.appendChild(foodNameSpan);
                    const foodNoteSpan = document.createElement('span');
                    foodNoteSpan.className = 'food-note';
                    foodNoteSpan.textContent = foodItem.note;
                    li.appendChild(foodNoteSpan);
                    ul.appendChild(li);
                });
                commonAilmentSupportDiv.appendChild(ul);
            });
        }

        stars.forEach((star, index) => {
            star.addEventListener('mouseover', function() {
                stars.forEach((s, i) => {
                    s.classList.remove('selected');
                    s.classList.remove('hover-active');
                    if (i <= index) {
                        s.classList.add('hover-active');
                    }
                });
            });

            star.addEventListener('mouseout', function() {
                stars.forEach(s => s.classList.remove('hover-active'));
                highlightStars(currentRating);
            });

            star.addEventListener('click', function() {
                currentRating = parseInt(this.dataset.value);
                highlightStars(currentRating);
                ratingMessage.textContent = `You've selected ${currentRating} star${currentRating > 1 ? 's' : ''}! Please submit your full feedback via the survey button.`;
            });
        });
        
        function highlightStars(rating) {
            stars.forEach((star) => {
                if (parseInt(star.dataset.value) <= rating) {
                     star.classList.add('selected');
                     star.classList.remove('hover-active');
                } else {
                    star.classList.remove('selected');
                }
            });
        }
    </script>
</body>
</html>
